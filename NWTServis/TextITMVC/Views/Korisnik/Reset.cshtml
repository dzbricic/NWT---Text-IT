@model ServisTextIT.Models.Korisnik

@{
    ViewBag.Title = "EnterEmail";
}

<h2>Zaboravili ste lozinku?</h2>
<h4>Unesite svoj email.</h4>

@using (Html.BeginForm("ResetAction", "Korisnik"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.email)
                @Html.ValidationMessageFor(model => model.email)
            </div>
        </div>
        
        
                
                    <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="submit" type="submit" value="Email potvrda" class="btn btn-default" />
                </div>
            </div>
        </div>
}




