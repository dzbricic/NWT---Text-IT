@model IEnumerable<ServisTextIT.Models.Tekst>

@{
    ViewBag.Title = "Index";
}





<h1>Tekstovi</h1>
<div ng-controller="Tekstovi" data-ng-init="getTekst()">
    <button>
        <div>
            @Html.ActionLink("Dodaj Tekst", "Create")
        </div>
    </button>
    <br />
    <div title="Tekstovi">

        <hr />
        <div ng-repeat="tekst in tekstovi">
            <label>{{tekst.naslov}}</label>
            <p ng-model="tekst">{{tekst.sadrzaj}}</p>
            <p ng-model="tekst">{{tekst.datumObjave}}</p>
            <table class="table">
                <tr>
                    <td>
                        <button type="button" ng-click="deleteTekst(tekst)" class="btn btn-primary btn-large" ng-model="tekst.tekstID">Obrisi!</button>
                    </td>
                    <td>
                        <button type="button" ng-click="editTekst(tekst)" class="btn btn-primary btn-large" ng-model="tekst.tekstID">Izmijeni</button>
                    </td>

                </tr>
            </table>
        </div>
    </div>
</div>