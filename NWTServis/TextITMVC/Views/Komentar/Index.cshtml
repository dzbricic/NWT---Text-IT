@model IEnumerable<ServisTextIT.Models.Komentar>

@{
    ViewBag.Title = "Index";
}

<h2>Komentari</h2>
<div ng-controller="Komentari" data-ng-init="getKomentar()">
    <button>
        <div>
            @Html.ActionLink("Dodaj komentar", "Create")
        </div>
    </button>
    <table class="table">
        <tr>
            <td style="font-weight:700">
                Sadrzaj
            </td>
            <td style="font-weight:700">
                Datum objave
            </td>
            <td style="font-weight:700">
                Kreirao
            </td>
            <td style="font-weight:700">Izbriši komentar</td>
            <td style="font-weight:700">Izmijeni komentar</td>
        </tr>
        <tr ng-repeat="komentar in komentari">
            <td>
                {{komentar.sadrzaj}}
            </td>
            <td>
                {{komentar.datumObjave}}
            </td>
            <td>
                {{komentar.korisnikID}}
            </td>
            <td>
                <button type="button" ng-click="deleteKomentar(komentar)" class="btn btn-primary btn-large" ng-model="komentar.komentarID">Obriši!</button>
            </td>
            <td>
                <button type="button" ng-click="editKomentar(komentar)" class="btn btn-primary btn-large" ng-model="komentar.komentarID">Izmijeni</button>
            </td>
        </tr>
    </table>
 </div>
