@model ServisTextIT.Models.Komentar

@{
    ViewBag.Title = "Edit";
}

<h2>Izmijeni</h2>


<h4>Komentar</h4>
<hr />

<div ng-controller="KomentarEdit" data-ng-init="editKomentar('@Model.komentarID')">
    <table>
        <tr>
            <td><label>ID</label></td>
            <td><input ng-model="komentar.id"/></td>
        </tr>
        <tr>
            <td><label>Sadrzaj</label></td>
            <td><input placeholder="sadrzaj" ng-model="komentar.sadrzaj" /></td>
        </tr>
        <tr>
            <td><label>Datum objave</label></td>
            <td><input ng-model="komentar.datumObjave"  /></td>
        </tr>
        <tr>
            <td><label>Korisnik</label></td>
            <td><input ng-model="komentar.korisnikID" /></td>
        </tr>

    </table>
    <button type="button" ng-click="updateKomentar('@Model.komentarID')" class="btn btn-primary btn-large" ng-model="izmijeni">Izmijeni komentar</button>




</div>

